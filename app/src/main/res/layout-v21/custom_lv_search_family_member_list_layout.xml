<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/sfml_lv_rl_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/afm_rl_background_color"
        android:paddingBottom="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/rl_circle_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="5dp">


            <android.support.v7.widget.CardView
                android:id="@+id/card_circle_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:elevation="0dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/sfml_lv_iv_gender_icon"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/sfml_lv_tvNaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rl_circle_men"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/rl_circle_men"

            android:gravity="right"
            android:text=""@string/_kashif_ali_khan""
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/_12sdp" />

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/sfml_lv_tvNaam"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toRightOf="@+id/rl_circle_men"

            android:background="@color/pink_color" />

        <TextView
            android:id="@+id/sfml_lv_tvUmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toRightOf="@+id/rl_circle_men"
            android:text="@string/ageColon"
            android:textColor="@color/hp_listview_textview_greycolor"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/sfml_lv_tvBirthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toRightOf="@+id/sfml_lv_tvUmer"
            android:text="02 سال 06 مہ"
            android:textColor="@color/hp_listview_textview_greycolor"
            android:textSize="@dimen/_10sdp" />


        <ImageView
            android:padding="@dimen/_3sdp"

            android:id="@+id/sfml_lv_male_female_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp" />

    </RelativeLayout>

</RelativeLayout>