<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#000" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/video_layout" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.universalvideoview.UniversalVideoView android:layout_gravity="center" android:id="@+id/videoView" android:layout_width="match_parent" android:layout_height="match_parent" app:uvv_autoRotation="false" app:uvv_fitXY="false"/>
        <com.universalvideoview.UniversalMediaController android:id="@+id/media_controller" android:layout_width="match_parent" android:layout_height="match_parent" app:uvv_scalable="true"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/bottom_layout" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</RelativeLayout>
