<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:padding="10dp">


    <android.support.v7.widget.CardView
        android:background="@null"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rl_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <ImageView
                    android:id="@+id/iv_check_circle"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_check_circle_black_24dp" />


                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_check_circle">

                    <TextView
                        android:id="@+id/txt_polio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="sss"
                        android:visibility="invisible"
                        android:textColor="@color/green_color"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/txt_polio_eng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"

                        android:text="(Polio)"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/green_color"
                        android:textSize="@dimen/_15sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_1"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_toLeftOf="@+id/iv_check_circle">

                    <TextView
                        android:id="@+id/txt_poliomyelitis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/chpslhvf_poliomyelitis_text"
                        android:visibility="invisible"
                        android:textColor="@color/grey_color"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_2"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_toLeftOf="@+id/iv_check_circle">

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="@string/chpslhvf_date_text" android:visibility="invisible"
                        android:textColor="#757575"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/txt_mosool_hoe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toLeftOf="@+id/txt_date"
                        android:text="@string/chpslhvf_mosool_hoe_text"
                        android:textColor="#757575" android:visibility="invisible"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_left_topbottomcorner"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/right_topbottomcorner_green_background_layout">


            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>