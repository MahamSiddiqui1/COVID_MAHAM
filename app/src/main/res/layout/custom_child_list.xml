<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rl_left_topbottomcorner"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/left_topbottomcorner_red_background_layout"
                android:paddingBottom="@dimen/_40sdp">


            </RelativeLayout>

            <RelativeLayout

                android:id="@+id/rl_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/right_topbottomcorner_background_layout">

                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tvNaam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/tvcount"
                        android:gravity="right"
                        android:text="Name"
                        android:textColor="@color/dark_blue_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/tvcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="0"
                        android:textColor="@color/light_blue_color"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_medicine_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_1"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/tvMedicineName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Med Name"
                        android:textColor="@color/dark_blue_color"
                        android:textSize="@dimen/_12sdp" />


                    <LinearLayout
                        android:id="@+id/ll_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvMedicineName"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvBal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" Balance: "
                            android:textColor="@color/pink_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="0/0"
                            android:textColor="@color/dark_blue_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Utilized: "
                            android:gravity="end"
                            android:textColor="@color/blue_text_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvUtilized"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="0"
                            android:textColor="@color/dark_blue_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wastage: "
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textColor="@color/pink_color"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tvWastage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="0"
                            android:textColor="@color/dark_blue_color"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>




                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>