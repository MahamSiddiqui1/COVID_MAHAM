<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:padding="0dp">


    <RelativeLayout
        android:id="@+id/afm_lv_rl_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:background="@color/afm_rl_background_color">

        <RelativeLayout
            android:layout_marginEnd="@dimen/_5sdp"
            android:id="@+id/rl_circle_men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp">


            <android.support.v7.widget.CardView
                android:id="@+id/card_circle_view"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="32dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/afm_lv_iv_gender_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/afm_lv_tvNaam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/rl_circle_men"
            android:text="@string/hp_listview_name_text"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/afm_lv_tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_20sdp"
           android:layout_alignParentStart="true"
            android:text="02/02/2019\n13:02:55"
            android:textColor="@color/hp_listview_textview_greycolor"
            android:textSize="@dimen/_14sdp" />


    </RelativeLayout>

</RelativeLayout>