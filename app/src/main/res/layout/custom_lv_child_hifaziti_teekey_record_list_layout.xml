<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        android:padding="@dimen/_5sdp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/within24"
        android:background="@color/light_blue_color"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_white"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/chtr_lv_rl_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeading"
        android:background="@color/afm_rl_background_color"
        android:padding="@dimen/_10sdp">

        <TextView
            android:id="@+id/chtr_lv_tvTareekh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/chtr_tareekh_adaegi_text"
            android:textColor="@color/chtr_dpt_green_txt_color"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/chtr_lv_tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_toStartOf="@+id/chtr_lv_tvTareekh"
            android:textColor="@color/chtr_dpt_green_txt_color"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/chtr_lv_tvVaccineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toEndOf="@+id/chtr_lv_iv_vaccineIcon"
            android:text="@string/chtr_BCG_text"
            android:textColor="@color/chtr_dpt_green_txt_color"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/chtr_lv_iv_vaccineIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:src="@drawable/ic_bcg_icon" />


    </RelativeLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/chtr_lv_rl_background"
        android:layout_margin="@dimen/_5sdp"
        android:background="@color/dark_blue_color"
        android:visibility="gone" />


</RelativeLayout>