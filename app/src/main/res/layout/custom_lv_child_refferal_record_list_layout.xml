<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">


    <RelativeLayout
        android:padding="@dimen/_10sdp"
        android:id="@+id/crl_lv_rl_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/afm_rl_background_color"
        tools:ignore="UselessParent">


        <TextView
            android:id="@+id/crl_lv_tvRefferalNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:text="@string/crl_refferal_number_text"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/crl_lv_tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/crl_lv_tvRefferalNumber"
            android:text="@string/_12345"
            android:layout_marginEnd="@dimen/_5sdp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_leftarrow_icon" />

    </RelativeLayout>

</RelativeLayout>