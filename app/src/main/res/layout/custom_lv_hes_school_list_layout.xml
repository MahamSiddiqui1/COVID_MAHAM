<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_sync"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/color_white"
    app:cardElevation="@dimen/_5sdp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rl_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <RelativeLayout

                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_toStartOf="@+id/iv_icon"
                android:layout_marginEnd="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tvSchoolName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text="@string/caa_model_school"
                    android:textColor="@color/dark_blue_color"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/_2sdp"
                android:id="@+id/rl_2"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_1"
                android:layout_toStartOf="@+id/iv_icon">

                <TextView
                    android:id="@+id/tvHeadName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:text="@string/head_name"
                    android:textStyle="bold"
                    android:textColor="@color/light_grey_color"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvSchoolHeadName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/tvHeadName"
                    android:text="@string/noman"
                    android:textColor="@color/light_grey_color"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="35dp"
                android:src="@drawable/ic_school_black_24dp"
                android:tint="@color/blue_text_color"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>