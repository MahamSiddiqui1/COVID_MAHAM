<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/iv_images"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_vacine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:padding="5dp"
            android:text="Vaccination name:"
            android:layout_toRightOf="@+id/iv_images"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/txt_vacine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_vacine"
            android:padding="5dp"
            android:text="Vaccination A shot 1"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/_12sdp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

