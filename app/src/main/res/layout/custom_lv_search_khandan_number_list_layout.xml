<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rl_left_topbottomcorner"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/left_topbottomcorner_blue_background_layout">


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sknl_lv_rl_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/right_topbottomcorner_background_layout"
                android:backgroundTint="@color/color_white"
                tools:targetApi="lollipop">

                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/sknl_lv_tvNaam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:text="@string/sknl_khandan_number_text"
                        android:textColor="@color/hp_listview_textview_bluecolor"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/sknl_lv_tvkhandanNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/sknl_lv_tvNaam"
                        android:text="@string/_231_741"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:textColor="@color/hp_listview_textview_bluecolor"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_1">

                    <TextView
                        android:id="@+id/sknl_lv_tvfaAl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="@string/sknl_faAl_text"
                        android:textColor="#37A137"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/sknl_lv_tvGaon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:text="@string/hp_listview_gaon_text"
                        android:textColor="@color/hp_listview_textview_greycolor"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_2">


                    <TextView
                        android:id="@+id/hp_lv_tvGaon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:text="@string/hp_listview_gaon_text"
                        android:textColor="@color/hp_listview_textview_greycolor"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>