<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rl_left_topbottomcorner"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/left_topbottomcorner_red_background_layout"
                android:paddingBottom="@dimen/_45sdp">


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/right_topbottomcorner_background_layout">

                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/hp_lv_tvNaam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:text="Name"
                        android:textColor="@color/dark_blue_color"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/hp_lv_tvcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@color/light_blue_color"
                        android:textSize="@dimen/_12sdp" />
                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>