<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp">

        <!--<ImageView-->
            <!--android:id="@+id/iv_close"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginEnd="0dp"-->
            <!--android:padding="10dp"-->
            <!--android:src="@drawable/ic_close_black_24dp"-->
            <!--android:tint="@color/pink_color" />-->
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="right"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/pink_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_15sdp">

            <Button
                android:id="@+id/btn_vaccine_ko_anjaam_dy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_button_shape_layout"
                android:text="@string/dialog_vaccine_ko_anjaam_dy_button_text"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/btn_phle_sy_li_hoe_vaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/round_button_shape_layout"
                android:text="@string/dialog_phle_sy_li_hoe_vaccine_button_text"
                android:textColor="@color/pink_color"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>