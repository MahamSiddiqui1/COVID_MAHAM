<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slidemenu="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/cr_rectangle_layout"
    android:backgroundTint="@color/color_white"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp">


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="right"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/pink_color" />

        <TextView

            android:id="@+id/tv_give_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_horizontal"
            android:text="@string/feedback_text"
            android:textColor="@color/pink_color"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout

            android:id="@+id/ll_emoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:weightSum="5">


            <ImageView
                android:id="@+id/iv_VerySatisfied"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/v_satisfied" />


            <ImageView
                android:id="@+id/iv_Satisfied"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:src="@drawable/satisfied" />

            <ImageView
                android:id="@+id/iv_Neutral"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:src="@drawable/neutral" />

            <ImageView
                android:id="@+id/iv_UnSatisfied"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:src="@drawable/unsatisfied" />

            <ImageView
                android:id="@+id/iv_VeryUnSatisfied"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_weight="1"
                android:src="@drawable/v_unsatisfied" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_feedback_emoji"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/rating_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:numStars="5"
                android:progressTint="@color/pink_color"
                android:stepSize="1"
                android:visibility="gone" />

            <Button
                android:id="@+id/submit"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/login_button_shape_layout"
                android:text="@string/cnnf_jaama_kre_button"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_16sdp"
                android:visibility="gone" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_not_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="ابھی نہیں"
                android:textColor="@color/grey_color"
                android:textSize="@dimen/_16sdp" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbProgress"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center|center_vertical"
            android:indeterminateDrawable="@drawable/circular_progressbar_layout"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
