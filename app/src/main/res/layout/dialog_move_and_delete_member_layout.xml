<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_backgroud"
    android:backgroundTint="@color/color_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="right"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="5dp"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/pink_color" />


        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_shift_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_button_shape_layout"
                android:text="کسی دوسرے خاندان میں منتقل کریں"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_delete_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_button_shape_layout"
                android:text="اس خاندان سے ڈیلیٹ کریں"
                android:textColor="@color/pink_color"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_khandanNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <TableLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_10sdp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:text="خاندان نمبر درج کریں"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_14sdp" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background_layout"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_khandan_number_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="@null"
                            android:gravity="right"
                            android:inputType="phone"
                            android:lines="1"
                            android:maxLength="4"
                            android:padding="@dimen/_5sdp"
                            android:textColorHint="@color/dark_blue_color"
                            android:textSize="@dimen/_14sdp"
                            android:theme="@style/StyleTextInputLayout" />

                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/login_button_shape_layout"
                android:text="جاری رہے"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>