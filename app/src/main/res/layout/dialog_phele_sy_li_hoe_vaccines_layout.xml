<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="5dp"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="@color/pink_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_close"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_5sdp"
        android:paddingRight="@dimen/_5sdp">


        <LinearLayout

            android:id="@+id/ll_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">


            <Button
                android:id="@+id/btn_InFacility"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/pink_color"
                android:gravity="center"
                android:text="In Facility"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_10sdp" />

            <Button
                android:id="@+id/btn_Outreach"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounder_corner_light"
                android:gravity="center"
                android:text="Outreach"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue_color"
                android:textSize="@dimen/_10sdp" />

            <Button
                android:id="@+id/btn_MobileVaccine"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounder_corner_light"
                android:gravity="center"
                android:text="Mobile\nVaccine"
                android:textAllCaps="false"
                android:textColor="@color/dark_blue_color"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>


        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="@string/vaccine_provided"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14sdp" />

        <EditText
            android:id="@+id/et_tareekh_mosool_hoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background_layout"
            android:cursorVisible="false"
            android:drawableLeft="@drawable/ic_calender"
            android:drawablePadding="@dimen/_10sdp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="right|center"
            android:padding="@dimen/_8sdp"
            android:textSize="@dimen/_12sdp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:text="@string/vaccine_provided"
            android:textColor="@color/text_color"
            android:textSize="@dimen/_14sdp" />


        <Spinner
            android:id="@+id/sp_vaccine_kaha_farham_hoe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"
            android:background="@color/edittext_background_color"
            android:padding="@dimen/_8sdp"
            android:popupElevation="0dp"
            android:spinnerMode="dropdown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_gravity="center_horizontal"

                android:background="@drawable/login_button_shape_layout"
                android:text="@string/submit"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>