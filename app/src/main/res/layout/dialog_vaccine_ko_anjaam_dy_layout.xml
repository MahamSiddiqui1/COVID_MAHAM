<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp">

        <!--<ImageView-->
        <!--android:id="@+id/iv_close"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="right"-->
        <!--android:layout_marginEnd="0dp"-->
        <!--android:padding="10dp"-->
        <!--android:src="@drawable/ic_close_black_24dp"-->
        <!--android:tint="@color/pink_color" />-->
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="right"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_close_black_24dp"
            app:tint="@color/pink_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/edittext_background_layout"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />

            <Spinner
                android:id="@+id/sp_inside_outside_council"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@null"
                android:popupElevation="0dp"
                android:spinnerMode="dropdown"
                tools:targetApi="lollipop" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <Button
                android:id="@+id/btn_vaccine_ko_anjaam_dy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_button_shape_layout"
                android:text="@string/vaccinateNow"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/btn_phle_sy_li_hoe_vaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/round_button_shape_layout"
                android:text="@string/fromElsewhere"
                android:textColor="@color/pink_color"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/btn_phle_sy_li_hoe_vaccine_uc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/round_button_shape_layout"
                android:text="@string/dialog_phle_sy_li_hoe_vaccine_uc_button_text"
                android:textColor="@color/pink_color"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_refuse_vaccine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/round_button_shape_layout"
                android:text="@string/refuse_vaccine"
                android:textColor="@color/pink_color"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>