<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_15sdp"
    android:background="@drawable/card_backgroud"
    android:backgroundTint="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_progress_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="ڈاؤن لوڈ ڈیٹا .."
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


        <ProgressBar
            android:id="@+id/pbProcessing"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateOnly="true "
            android:layout_marginTop="@dimen/_5sdp" />

        <TextView
            android:id="@+id/tvCountData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="0/0"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/_10sdp"
            android:textStyle="normal" />

    </LinearLayout>

    <!--    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"-->

    <LinearLayout
        android:id="@+id/ll_done_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <ProgressBar
            android:id="@+id/pbProgress"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center_horizontal"
            android:indeterminateDrawable="@drawable/circular_progressbar_layout"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvDataCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:text="0/0"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/image_tick"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:tint="@color/green_color" />

        <TextView
            android:id="@+id/tvmessage_download_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="right"
            android:text="ڈیٹا ڈاؤن لوڈ ہو گیا ہے .."
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>


