<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="95dp"
        android:paddingTop="10dp"
        android:paddingRight="95dp"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:id="@+id/rl_prProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--            <TextView-->
            <!--                android:id="@+id/sync_msg"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_centerHorizontal="true"-->
            <!--                android:layout_marginTop="@dimen/_10sdp"-->
            <!--                android:text="سینکنگ ڈیٹا"-->
            <!--                android:textColor="@color/dark_blue_color"-->
            <!--                android:textSize="@dimen/_18sdp" />-->

            <ProgressBar
                android:id="@+id/pbProgress"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:indeterminateDrawable="@drawable/circular_progressbar_layout" />

            <TextView
                android:id="@+id/tvcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_35sdp"
                android:text="0/0"
                android:textColor="@color/dark_blue_color"
                android:textSize="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/sync_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pbProgress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="سینکنگ ڈیٹا"
                android:textColor="@color/dark_blue_color"
                android:textSize="@dimen/_18sdp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/image_done"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/green_color"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

