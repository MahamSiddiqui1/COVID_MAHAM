<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="StyleTextInputLayout" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <!--<item name="android:textColorHint">@color/dark_blue_color</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@color/text_color</item>
        <item name="colorControlActivated">@color/text_color</item>
    </style>

    <style name="StyleTextLoginInputLayout" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <!--<item name="android:textColorHint">@color/dark_blue_color</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">@color/color_white</item>
        <item name="colorControlActivated">@color/color_white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/hp_listview_textview_redcolor</item>

        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#000</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">#000</item>
        <item name="android:strokeWidth" tools:targetApi="lollipop">1</item><!-- activated color change as you wish -->
        <item name="android:strokeColor" tools:targetApi="lollipop">#efefef</item>
        <item name="android:textColor">#FFFF3F3C</item> <!-- checkbox text color -->
    </style>

    <!--//Date Picker Dialog-->
    <style name="DatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <!--Rating Bar Styles-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/cr_rectangle_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>



<!--Nighedasht Edittext Style-->
    <style name="StyleTIL_Light" parent="TextAppearance.AppCompat">
    <!-- Hint color and label color in FALSE state -->
    <item name="android:textColorHint">@color/dark_blue_color</item>
    <item name="android:textSize">@dimen/_12sdp</item>
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorControlNormal">@color/edittext_background_color</item>
    <item name="colorControlActivated">@color/dark_blue_color</item>
    <item name="android:layout_marginLeft">7dp</item>
    <item name="android:layout_marginRight">7dp</item>
    </style>


    <!--//FullScreen Theme-->

    <!-- Base application theme. -->
    <style name="fullscreen_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>


    <!--Tab Layout Custom-->
    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>

    </style>



<!-- Dialog Animation-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_animation</item>
        <item name="android:windowExitAnimation">@anim/fade_out_animation</item>
    </style>

    <style name="DialogAnimation_SlideUp">
        <item name="android:windowEnterAnimation">@anim/slide_up_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_animation</item>
    </style>


    <!--Round Corner Card BottomSheet-->
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_rounded_corners</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>


    <!--Spinner-->

    <style name="AppTheme.Spinner">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingRight">16dp</item>
    </style>



    </resources>

